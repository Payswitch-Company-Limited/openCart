{{ header }}{{ column_left }}
<div id="content">
  <div class="page-header">
    <div class="container-fluid">
      <div class="pull-right">
        <button type="submit" form="form-payment" data-toggle="tooltip" title="{{ button_save }}" class="btn btn-primary"><i class="fa fa-save"></i></button>
        <a href="{{ cancel }}" data-toggle="tooltip" title="{{ button_cancel }}" class="btn btn-default"><i class="fa fa-reply"></i></a></div>
      <h1>{{ heading_title }}</h1>
      <ul class="breadcrumb">
        {% for breadcrumb in breadcrumbs %}
        <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
        {% endfor %}
      </ul>
    </div>
  </div>
  <div class="container-fluid">
    {% if error_warning %}
    <div class="alert alert-danger alert-dismissible"><i class="fa fa-exclamation-circle"></i> {{ error_warning }}
      <button type="button" class="close" data-dismiss="alert">&times;</button>
    </div>
    {% endif %}
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title"><i class="fa fa-pencil"></i> {{ text_edit }}</h3>
      </div>
      <div class="panel-body">
        <form action="{{ action }}" method="post" enctype="multipart/form-data" id="form-payment" class="form-horizontal">
        
          <div class="form-group required">
            <label class="col-sm-2 control-label" for="input-merchant-id">{{ entry_merchant_id }} <span data-toggle="tooltip" title="{{ help_merchant_id }}"></span></label>
            <div class="col-sm-10">
              <input type="text" name="payment_theteller_merchant_id" value="{{ payment_theteller_merchant_id }}" placeholder="{{ entry_merchant_id }}" id="input-merchant-id" class="form-control" />
              {% if error_merchant_id %}
              <div class="text-danger">{{ error_merchant_id }}</div>
              {% endif %}
            </div>
          </div>

          <div class="form-group required">
            <label class="col-sm-2 control-label" for="input-merchant-name">{{ entry_merchant_name }} <span data-toggle="tooltip" title="{{ help_merchant_name }}"></span></label>
            <div class="col-sm-10">
              <input type="text" name="payment_theteller_merchant_name" value="{{ payment_theteller_merchant_name }}" placeholder="{{ entry_merchant_name }}" id="input-merchant-name" class="form-control" />
              {% if error_merchant_name %}
              <div class="text-danger">{{ error_merchant_name }}</div>
              {% endif %}
            </div>
          </div>

          <div class="form-group required">
            <label class="col-sm-2 control-label" for="input-api-user">{{ entry_api_user }} <span data-toggle="tooltip" title="{{ help_api_user }}"></span></label>
            <div class="col-sm-10">
              <input type="text" name="payment_theteller_api_user" value="{{ payment_theteller_api_user }}" placeholder="{{ entry_api_user }}" id="input-api-user" class="form-control" />
              {% if error_api_user %}
              <div class="text-danger">{{ error_api_user }}</div>
              {% endif %}
            </div>
          </div>


          <div class="form-group required">
            <label class="col-sm-2 control-label" for="input-api-key">{{ entry_api_key }} <span data-toggle="tooltip" title="{{ help_api_key }}"></span></label>
            <div class="col-sm-10">
              <input type="text" name="payment_theteller_api_key" value="{{ payment_theteller_api_key }}" placeholder="{{ entry_api_key }}" id="input-api-user" class="form-control" />
              {% if error_api_key %}
              <div class="text-danger">{{ error_api_key }}</div>
              {% endif %}
            </div>
          </div>


           <div class="form-group required">
            <label class="col-sm-2 control-label" for="input-env">{{ entry_environment }} <span data-toggle="tooltip" title="{{ help_environment }}"></span></label>
            <div class="col-sm-10">
              <select name="payment_theteller_environment" id="input-env" class="form-control">
                <option value="Test" selected="selected">Test</option>
                <option value="Live">Live</option>
              </select>
            </div>
          </div>


          <div class="form-group required">
            <label class="col-sm-2 control-label" for="input-currency">{{ entry_currency }} <span data-toggle="tooltip" title="{{ help_currency }}"></span></label>
            <div class="col-sm-10">
              <select name="payment_theteller_currency" id="input-currency" class="form-control">
                <option value="GHS" selected="selected">GHS</option>
                <option value="USD">USD</option>
                <option value="EUR">EUR</option>
                <option value="GBP">GBP</option>
              </select>

            </div>
          </div>


          <div class="form-group required">
            <label class="col-sm-2 control-label" for="input-env">{{ entry_channel }} <span data-toggle="tooltip" title="{{ help_channel }}"></span></label>
            <div class="col-sm-10">
              <select name="payment_theteller_channel" id="input-env" class="form-control">
                <option value="both" selected="selected">Both</option>
                <option value="card">Card Only</option>
                <option value="momo">Mobile Money Only</option>
              </select>
            </div>
          </div>


         
          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-callback"><span data-toggle="tooltip" title="{{ help_callback }}">{{entry_callback}}</span></label>
            <div class="col-sm-10">
              <textarea rows="5" name="payment_theteller_callback" readonly id="payment_theteller_callback" class="form-control">{{ callback }}</textarea>
            </div>
          </div>



          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-sms-status">{{ entry_theteller_sms_status }} <span data-toggle="tooltip" title="{{ help_sms_status }}"></span></label>
            <div class="col-sm-10">
              <select name="payment_theteller_sms_status" id="input-env" class="form-control">
                <option value="0" selected="selected">Disabled</option>
                <option value="1">Active</option>
              </select>
            </div>
          </div>


           <div class="form-group">
            <label class="col-sm-2 control-label" for="input-sms-api-user">{{ entry_sms_api_user }} <span data-toggle="tooltip" title="{{ help_sms_api_user }}"></span></label>
            <div class="col-sm-10">
              <input type="text" name="payment_theteller_sms_api_user" value="{{ payment_theteller_sms_api_user }}" placeholder="{{ entry_sms_api_user }}" id="input-sms-api-user" class="form-control" />
              
            </div>
          </div>


          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-sms-api-password">{{ entry_sms_api_password }} <span data-toggle="tooltip" title="{{ help_sms_api_password }}"></span></label>
            <div class="col-sm-10">
              <input type="text" name="payment_theteller_sms_api_password" value="{{ payment_theteller_sms_api_password }}" placeholder="{{ entry_sms_api_password }}" id="input-sms-api-password" class="form-control" />
              
            </div>
          </div>


          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-sms-api-senderid">{{ entry_sms_api_senderid }} <span data-toggle="tooltip" title="{{ help_sms_api_senderid }}"></span></label>
            <div class="col-sm-10">
              <input type="text" name="payment_theteller_sms_api_senderid" value="{{ payment_theteller_sms_api_senderid }}" placeholder="{{ entry_sms_api_senderid }}" id="input-sms-api-senderid" class="form-control" />
             
            </div>
          </div>



          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-total"><span data-toggle="tooltip" title="{{ help_total }}">{{entry_total}}</span></label>
            <div class="col-sm-10">
              <input type="text" name="payment_theteller_total" value="{{ payment_theteller_total }}" placeholder="{{ entry_total }}" id="input-total" class="form-control" />
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-order-status">{{ entry_order_status }}</label>
            <div class="col-sm-10">
              <select name="payment_theteller_order_status_id" id="input-order-status" class="form-control">
                {% for order_status in order_statuses %}
                {% if order_status.order_status_id == payment_theteller_order_status_id %}
                <option value="{{ order_status.order_status_id }}" selected="selected">{{ order_status.name }}</option>
                {% else %}
                <option value="{{ order_status.order_status_id }}">{{ order_status.name }}</option>
                {% endif %}
                {% endfor %}
              </select>
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-geo-zone">{{ entry_geo_zone }}</label>
            <div class="col-sm-10">
              <select name="payment_theteller_geo_zone_id" id="input-geo-zone" class="form-control">
                <option value="0">{{ text_all_zones }}</option>
                {% for geo_zone in geo_zones %}
                {% if geo_zone.geo_zone_id == payment_theteller_geo_zone_id %}
                <option value="{{ geo_zone.geo_zone_id }}" selected="selected">{{ geo_zone.name }}</option>
                {% else %}
                <option value="{{ geo_zone.geo_zone_id }}">{{ geo_zone.name }}</option>
                {% endif %}
                {% endfor %}
              </select>
            </div>
          </div>

         


          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-status">{{ entry_status }}</label>
            <div class="col-sm-10">
              <select name="payment_theteller_status" id="input-status" class="form-control">
                {% if payment_theteller_status %}
                <option value="1" selected="selected">{{ text_enabled }}</option>
                <option value="0">{{ text_disabled }}</option>
                {% else %}
                <option value="1">{{ text_enabled }}</option>
                <option value="0" selected="selected">{{ text_disabled }}</option>
                {% endif %}
              </select>
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-sort-order">{{ entry_sort_order }}</label>
            <div class="col-sm-10">
              <input type="text" name="payment_theteller_sort_order" value="{{ payment_theteller_sort_order }}" placeholder="{{ entry_sort_order }}" id="input-sort-order" class="form-control" />
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
{{ footer }}
